<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTanPrimary">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_picture_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_marginStart="31dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/avatar" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/first_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Active Orders:" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="190dp"
            android:layout_toEndOf="@+id/order_1_id"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/quicksand"
            android:text="   Design (2)   " />

        <TextView
            android:id="@+id/balance_header_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="270dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Balance:" />

        <TextView
            android:id="@+id/balance_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="320dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="right"
            android:text="$185"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/gig_summary_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="380dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Gig Summary:" />

        <TextView
            android:id="@+id/rating_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="430dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="right"
            android:text="97%"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/rating_descriptor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="470dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Positive Rating"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />

        <TextView
            android:id="@+id/completed_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="230dp"
            android:layout_marginTop="430dp"
            android:fontFamily="@font/quicksand_medium"
            android:gravity="right"
            android:text="26"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/completed_descriptor_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="197dp"
            android:layout_marginTop="470dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Completed GIgs"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/order_1_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/button_selector"
            android:fontFamily="@font/quicksand"
            android:text="Branding (1)" />
    </RelativeLayout>

</RelativeLayout>