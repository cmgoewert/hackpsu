<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTanAccent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/quicksand"
            android:text="Let your clients know who you are!"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/picture_header_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="46dp"
            android:fontFamily="@font/quicksand"
            android:text="Select Profile Picture:" />

        <ImageButton
            android:id="@+id/myButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="31dp"
            android:gravity="center_vertical"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="100dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/select_pic" />

        <TextView
            android:id="@+id/first_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="209dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="First Name:" />

        <EditText
            android:id="@+id/edit_first_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="195dp"
            android:layout_toEndOf="@+id/first_name_id"
            android:ems="10"
            android:fontFamily="@font/quicksand"
            android:inputType="textPersonName"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/last_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/first_name_id"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="LastName:" />

        <EditText
            android:id="@+id/edit_last_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="243dp"
            android:layout_toEndOf="@+id/last_name_id"
            android:ems="10"
            android:fontFamily="@font/quicksand"
            android:inputType="textPersonName"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/last_name_id"
            android:layout_below="@+id/last_name_id"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Email:" />

        <EditText
            android:id="@+id/email_field_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="291dp"
            android:layout_toEndOf="@+id/email_id"
            android:ems="10"
            android:fontFamily="@font/quicksand"
            android:inputType="textPersonName"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat" />

        <TextView
            android:id="@+id/summary_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/email_id"
            android:layout_below="@+id/email_id"
            android:layout_centerVertical="true"
            android:layout_marginBottom="30dp"
            android:layout_marginStart="37dp"
            android:fontFamily="@font/quicksand"
            android:gravity="right"
            android:text="Summary:" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/summary_id"
            android:layout_marginBottom="82dp"
            android:layout_marginEnd="36dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/quicksand"
            android:inputType="textMultiLine" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/portfolio_nav_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/quicksand_medium"
            android:text="Set up portfolio"
            android:textColor="@android:color/white" />




    </RelativeLayout>

</RelativeLayout>